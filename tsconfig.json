{
  "include": ["server/**/*", "client/src/**/*", "frontend/src/**/*", "shared/**/*", "scripts/**/*", "types/**/*", "backend/**/*"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "ESNext",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "allowJs": true,
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "paths": {
      "@/components/*": ["./frontend/src/components/*", "./client/src/components/*"],
      "@/lib/*": ["./frontend/src/lib/*", "./client/src/lib/*"],
      "@/contexts/*": ["./frontend/src/contexts/*", "./client/src/contexts/*"],
      "@/hooks/*": ["./frontend/src/hooks/*", "./client/src/hooks/*"],
      "@/pages/*": ["./frontend/src/pages/*", "./client/src/pages/*"],
      "@shared/*": ["./shared/*"]
    }
  }
}
